<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gaya"
    android:background="@drawable/bghitgay">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/hitungBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="237dp"
            android:layout_marginLeft="90dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btnhitung" />

        <TextView
            android:id="@+id/judulTV"
            android:layout_width="269dp"
            android:layout_height="41dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="68dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/judulgay"
            />

        <TextView
            android:id="@+id/massaTV"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/tulisanmassa"
            />
        <TextView
            android:id="@+id/kecepatanTV"
            android:layout_width="101dp"
            android:layout_height="25dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/tulisankece"
            />
    <EditText
        android:id="@+id/massaField"
        android:layout_width="116dp"
        android:layout_height="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/massaTV"
        android:background="@drawable/inputankal"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="@color/transparent_white"
        android:textSize="28sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

        <EditText
            android:id="@+id/gayaField"
            android:layout_width="116dp"
            android:layout_height="45dp"
            android:layout_below="@+id/kecepatanTV"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/inputankal"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textColor="@color/transparent_white"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/hasilTV"
            android:layout_width="68dp"
            android:layout_height="22dp"
            android:layout_marginTop="330dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/tulisanhasil"/>

        <TextView
            android:id="@+id/hasilField"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="370dp"
            android:ems="10"
            android:background="@drawable/outputankal"
            android:layout_centerHorizontal="true"
            android:inputType="numberDecimal"
            android:textColor="@color/transparent_white"
            android:textAlignment="center"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/simpanTV"
            android:layout_width="69dp"
            android:layout_height="21dp"
            android:layout_marginTop="530dp"
            android:background="@drawable/tulisanprev"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/simpanField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="525dp"
            android:layout_toRightOf="@+id/simpanTV"
            android:ems="10"
            android:textColor="@color/transparent_white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:inputType="numberDecimal"/>
        <Switch
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="450dp"
            android:id="@+id/switch1"/>
        <Button
            android:id="@+id/saveBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp"
            android:background="@drawable/btnsimpan"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</ScrollView>